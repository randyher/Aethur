<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body class = "user-body">
        <h1>Video</h1>
        <hr class = "list-title">
        <div class="album text-muted">
            <div class="container">

              <div class="row">
                  <%@videos_reversed = @videos%>
                  <%@videos_reversed.each do |video| %>
                  <a href = "<%=user_video_path(:user_id,video)%>">
                      <div class="card">
                       <%= image_tag(video.thumbnail, class: "card-image") %>
                        <div><%=video.title%></div>
                        <p class="card-text"><%=video.sample_description%></p>
                </div>
            </a>
            <%end %>
            </div>
        </div>
        </div>
    </body>
</html>
